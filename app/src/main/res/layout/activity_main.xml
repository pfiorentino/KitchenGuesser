<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#004db6">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picture_background">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question"
            android:id="@+id/questionTextView"
            android:gravity="center"
            android:minLines="3"
            android:background="@android:color/white"
            android:padding="5dp" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imageView2"
        android:src="@drawable/chef"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-10dp"
        android:adjustViewBounds="false"
        android:elevation="2dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Oui"
            android:id="@+id/yesButton"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:layout_margin="2dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Probablement"
            android:id="@+id/probyesButton"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:layout_margin="2dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Ne sait pas"
        android:id="@+id/unknownButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:layout_margin="2dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Non"
            android:id="@+id/noButton"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:layout_margin="2dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Probablement pas"
            android:id="@+id/probnoButton"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:layout_margin="2dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
