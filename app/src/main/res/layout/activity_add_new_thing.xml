<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.epsi.i4.kitchenguesser.AddNewThingActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom complet de l&apos;objet à ajouter :"
        android:id="@+id/intituléChampNom"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/objectName"
        android:layout_gravity="center_horizontal"
        android:background="#ffffffff"
        android:hint="Nom de l&apos;objet" />

    <view
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        class="android.support.v4.widget.Space"
        android:id="@+id/spaceNameThing_Question"
        android:layout_weight="0.14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/question"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.v4.widget.Space"
        android:id="@+id/view"
        android:layout_weight="0.09" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerQuestion"
        android:layout_gravity="center_horizontal"
        android:background="#ffffffff"
        android:hint="Votre question fermée" />

    <view
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        class="android.support.v4.widget.Space"
        android:id="@+id/view6"
        android:layout_weight="0.19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="La réponse à votre question :"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oui"
            android:id="@+id/radioYes" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non"
            android:id="@+id/radioNo" />
    </RadioGroup>

    <view
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        class="android.support.v4.widget.Space"
        android:id="@+id/view7"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/validation"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
